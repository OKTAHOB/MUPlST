<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="add_playlist_text_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@drawable/text_field_outline</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/yp_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="add_playlist_text_input_layout_text_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="item_playlist_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
