<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TopBar">
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="MainMenuBtnsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_weight">3</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:layout_marginStart">@dimen/margin_btn</item>
        <item name="android:layout_marginEnd">@dimen/margin_btn</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>

    </style>
    <style name="trackName">
        <item name="android:textColor">?attr/black_or_white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_marginStart">@dimen/margin_music_start</item>
    </style>

    <style name="artistName">
        <item name="android:textColor">?attr/gray_or_white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ToolbarTitleTextStyle">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="PerefToolbarTitleTextStyle">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>

    </style>
    <style name="SearchStyle">
        <item name="android:backgroundTint">?attr/grayL_or_white</item>
        <item name="drawableTint">?attr/gray_or_black</item>
        <item name="android:textColorHint">?attr/gray_or_black</item>
    </style>
    <style name="MaterialTextViewStyle">
        <item name="android:paddingVertical">20dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">?attr/text_swp_color</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:drawableTint">?attr/icons_swp_color</item>

    </style>

    <style name="on_err">
        <item name="android:textSize">@dimen/text_size_lm</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="u_search">
        <item name="android:textSize">@dimen/text_size_lm</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/black_or_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ref_btn">
        <item name="android:textSize">@dimen/text_size_ms</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="drawableTint">?attr/black_or_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:backgroundTint">?attr/black_or_white</item>

    </style>
    <style name="player_track_title">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingVertical">8dp</item>
    </style>

    <style name="player_track_value">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/black_or_white</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="tabs_head">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="tabTextColor">?attr/black_or_white</item>
        <item name="android:textColor">?attr/black_or_white</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabIndicatorColor">?attr/black_or_white</item>
        <item name="background">?attr/white_or_black</item>
    </style>
    <style name="newPlaylistButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">?attr/black_or_white</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textColor">?attr/white_or_black</item>
        <item name="android:backgroundTint">?attr/black_or_white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="searchErrorMessage">
        <item name="android:textSize">19sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/black_or_white</item>
        <item name="android:textAlignment">center</item>

    </style>

</resources>