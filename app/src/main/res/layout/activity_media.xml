<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/white_or_black"
    android:orientation="vertical"
    tools:context="com.example.playlistmaker.features.media.presentation.ui.MediaLibraryActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/backImageView"
        style="@style/ToolbarTitleTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/arrow"
        app:navigationIconTint="?attr/black_or_white"
        app:title="@string/media" />


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        style="@style/tabs_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/white_or_black"
        app:tabTextAppearance="@style/tabs_head" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>