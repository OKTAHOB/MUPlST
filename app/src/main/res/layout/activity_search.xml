<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/white_or_black"
    >



    <com.google.android.material.appbar.MaterialToolbar

        android:layout_width="match_parent"
        android:layout_height="@dimen/header_size"
        android:id="@+id/top_toolbar_frame"
        android:layout_marginBottom="0dp"
        app:title="@string/search"
        style="@style/PerefToolbarTitleTextStyle"
        app:navigationIcon="@drawable/arrow"
        app:navigationIconTint="?attr/black_or_white"/>

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="16dp">

        <EditText
            android:id="@+id/inputEditText"
            style="@style/SearchStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/search_box"
            android:drawableStart="@drawable/search"
            android:drawablePadding="12dp"
            android:fontFamily="@font/ys_display_regular"
            android:hint="@string/search"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="12dp"
            android:textColor="@color/yp_black"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="@dimen/text_size_medium"
            app:drawableSize="16dp"
            android:singleLine="true"/>

        <ImageView
            android:id="@+id/clearIcon"
            style="@style/SearchStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginEnd="12dp"
            android:src="@drawable/cross"
            android:visibility="gone"
            app:drawableSize="16dp" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="148dp"
        android:layout_gravity="center_horizontal"
        android:indeterminateTint="@color/yp_blue"
        android:visibility="gone"  />

    <LinearLayout
        android:id="@+id/placeholder_no_res"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="102dp"
            android:src="@drawable/nothing_found"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/err_marg"
            style="@style/on_err"
            android:text="@string/no_results"
            android:textColor="?attr/black_or_white"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/placeholder_on_err"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="102dp"
            android:src="@drawable/no_internet"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/err_marg"
            android:paddingHorizontal="24dp"
            android:singleLine="false"
            android:text="@string/error_message"
            style="@style/on_err"
            android:textColor="?attr/black_or_white"
            />

        <Button
            android:id="@+id/retryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ref_btn"

            android:layout_gravity="center_horizontal"
            android:text="@string/retry"

            app:cornerRadius="54dp"
            />
    </LinearLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_history"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/historyContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
.
            <TextView
                android:id="@+id/historyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                style="@style/u_search"
                android:text="@string/vi_search"

                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/historyRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/clearHistoryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/clear_history"
                android:layout_marginTop="24dp"
                app:cornerRadius="54dp"
                style="@style/ref_btn"
                android:onClick="clearHistory"/>
        </LinearLayout>
    </ScrollView>
    </FrameLayout>

</LinearLayout>
