<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/playlistCover"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:contentDescription="@string/playlist_cover"
        android:scaleType="centerCrop"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:shapeAppearanceOverlay="@style/shapeable_imageview"
        app:srcCompat="@drawable/placeholder"
        tools:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/playlistTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        android:maxLines="1"
        android:textColor="?attr/black_or_white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/playlistCover"
        app:layout_constraintTop_toTopOf="@id/playlistCover"
        tools:text="Playlist title" />

    <TextView
        android:id="@+id/playlistTrackCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="6dp"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        android:maxLines="1"
        android:textColor="?attr/gray_or_white"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/playlistCover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/playlistCover"
        app:layout_constraintTop_toBottomOf="@id/playlistTitle"
        tools:text="5 tracks" />

</androidx.constraintlayout.widget.ConstraintLayout>
