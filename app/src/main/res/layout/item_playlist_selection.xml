<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp">

    <ImageView
        android:id="@+id/playlistCover"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/placeholder"
        android:contentDescription="@string/playlist_cover"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/playlistTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?attr/black_or_white"
        android:textSize="16sp"
        android:fontFamily="@font/ys_display_medium"
        app:layout_constraintStart_toEndOf="@id/playlistCover"
        app:layout_constraintTop_toTopOf="@id/playlistCover"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Playlist title" />

    <TextView
        android:id="@+id/playlistTrackCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?attr/gray_or_black"
        android:textSize="14sp"
        android:fontFamily="@font/ys_display_regular"
        app:layout_constraintStart_toEndOf="@id/playlistCover"
        app:layout_constraintTop_toBottomOf="@id/playlistTitle"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="5 tracks" />

</androidx.constraintlayout.widget.ConstraintLayout>
