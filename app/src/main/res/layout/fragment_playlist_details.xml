<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yp_gray_light"
    tools:context="com.example.playlistmaker.features.media.presentation.ui.PlaylistDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/ivPlaylistCover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/back"
            android:src="@drawable/arrow"
            android:tint="@color/yp_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <TextView
            android:id="@+id/tvPlaylistName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/ys_display_medium"
            android:textColor="@color/yp_black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/ivPlaylistCover"
            tools:text="Best songs 2021" />

        <TextView
            android:id="@+id/tvPlaylistDescription"
            style="@style/fragment_playlist_text"
            android:layout_width="0dp"
            android:visibility="gone"
            android:textColor="@color/yp_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/tvPlaylistName"
            tools:text="2022"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvPlaylistDuration"
            style="@style/fragment_playlist_text"
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/yp_black"
            app:layout_constraintStart_toEndOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/tvPlaylistDescription"
            tools:text="120 минут" />

        <ImageView
            android:id="@+id/ivDot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            android:src="@drawable/point"
            android:tint="@color/yp_black"
            app:layout_constraintBottom_toBottomOf="@id/tvPlaylistDuration"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toEndOf="@id/tvPlaylistDuration"
            app:layout_constraintTop_toTopOf="@id/tvPlaylistDuration" />

        <TextView
            android:id="@+id/tvPlaylistTrackCount"
            style="@style/fragment_playlist_text"
            android:layout_marginStart="12dp"
            android:textColor="@color/yp_black"
            app:layout_constraintBaseline_toBaselineOf="@id/tvPlaylistDuration"
            app:layout_constraintStart_toEndOf="@id/ivDot"
            tools:text="15 треков" />

        <ImageView
            android:id="@+id/ivShare"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/share"
            android:padding="8dp"
            android:scaleType="center"
            android:src="@drawable/share"
            android:tint="@color/yp_black"
            app:layout_constraintStart_toEndOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/tvPlaylistDuration" />

        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="24dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/playlist_menu"
            android:padding="8dp"
            android:scaleType="center"
            android:src="@drawable/more"
            android:tint="@color/yp_black"
            app:layout_constraintBottom_toBottomOf="@id/ivShare"
            app:layout_constraintStart_toEndOf="@id/ivShare"
            app:layout_constraintTop_toTopOf="@id/ivShare" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/bottomSheetTracks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_background"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="24dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_hideable="false"
        app:behavior_peekHeight="0dp"
        app:behavior_fitToContents="false"
        app:behavior_expandedOffset="0dp"
        tools:layout_gravity="bottom"
        tools:visibility="visible">

        <View
            android:id="@+id/bottomSheetHandle"
            android:layout_width="48dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottom_sheet_rectangle" />

        <ImageView
            android:id="@+id/ivEmptyState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:contentDescription="@null"
            android:src="@drawable/nothing_found"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvEmptyTracks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/playlist_empty_tracks"
            android:textColor="?attr/gray_or_white"
            android:textSize="14sp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPlaylistTracks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:nestedScrollingEnabled="true"
            android:overScrollMode="never" />
    </LinearLayout>

    <View
        android:id="@+id/menuOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/menuBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_sheet_background"
        android:orientation="vertical"
        android:paddingBottom="32dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        tools:layout_gravity="bottom"
        tools:visibility="gone">

        <View
            android:id="@+id/menuHandle"
            android:layout_width="48dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/bottom_sheet_rectangle" />

        <FrameLayout
            android:id="@+id/menuInfoContainer"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="12dp"
            android:paddingStart="13dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivMenuCover"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/menu_bottom_sheet_cover_shape"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvMenuPlaylistName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/black_or_white"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="Best songs 2021" />

                    <TextView
                        android:id="@+id/tvMenuTrackCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/yp_gray"
                        android:textSize="12sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="15 треков" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/menuShare"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:text="@string/playlist_menu_share"
                android:textColor="?attr/black_or_white"
                android:textSize="19sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuEdit"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:text="@string/playlist_menu_edit"
                android:textColor="?attr/black_or_white"
                android:textSize="19sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuDelete"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginBottom="128dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:text="@string/playlist_menu_delete"
                android:textColor="?attr/black_or_white"
                android:textSize="19sp" />
        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvPlaylistNotFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        android:gravity="center"
        android:text="@string/playlist_not_found"
        android:textAppearance="@style/searchErrorMessage"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
