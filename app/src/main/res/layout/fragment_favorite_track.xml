<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/white_or_black"
    tools:context="com.example.playlistmaker.features.media.presentation.ui.FavoritesFragment">



    <ImageView
        android:id="@+id/errorIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="106dp"
        android:src="@drawable/nothing_found"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/errorMessage"
        style="@style/searchErrorMessage"
        android:text="@string/media_is_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="@dimen/margin_music_start"
        android:paddingTop="@dimen/std_padding"
        android:textColor="?attr/tblack_or_white"
        android:visibility="visible"
        tools:visibility="visible" />


</LinearLayout>