<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/mback"
    android:orientation="vertical"
    android:paddingBottom="28dp"
    >

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_size"
        style="@style/TopBar"
        app:titleMarginStart="16dp"
        app:titleMarginTop="14dp"
        app:title="@string/app_name"
        app:titleTextAppearance="@style/ToolbarTitleTextStyle"
        app:titleTextColor="@color/yp_white"
        />

    <Button

        android:id="@+id/srch_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/search"
        style="@style/MainMenuBtnsStyle"
        app:icon="@drawable/search"
        app:cornerRadius="@dimen/rounding"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/ic_padding"
        app:iconTint="@color/yp_black"
         />

    <Button
        android:id="@+id/media_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/media"
        style="@style/MainMenuBtnsStyle"
        app:cornerRadius="@dimen/rounding"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/ic_padding"
        app:iconTint="@color/yp_black"
        app:icon="@drawable/media"/>

    <Button
        android:id="@+id/set_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/settings"
        style="@style/MainMenuBtnsStyle"
        app:cornerRadius="@dimen/rounding"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/ic_padding"
        app:iconTint="@color/black"
        app:icon="@drawable/settings" />

</LinearLayout>