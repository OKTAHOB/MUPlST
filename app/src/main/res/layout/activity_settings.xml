<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    >

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/settings_appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_size"
        app:title="@string/settings"
        app:titleTextAppearance="@style/SettingsToolbarTitleTextStyle"
        app:titleTextColor="@color/yp_black"
        app:titleMarginStart="16dp"
        app:titleMarginTop="14dp"
        app:navigationIcon="@drawable/arrow"
        android:layout_marginBottom="24dp"
        />


    <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="20dp"
        android:text="@string/dk_theme"
        android:textSize="@dimen/text_size_medium"
        app:thumbTint="@color/thumb"
        app:trackTint="@color/track"

        />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/share"
        android:paddingLeft="16dp"
        android:paddingRight="12dp"
        android:paddingVertical="20dp"
        android:text="@string/share"
        android:textColor="@color/yp_black"
        android:textSize="@dimen/text_size_medium" />
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/help"
        android:paddingLeft="16dp"
        android:paddingRight="12dp"
        android:paddingVertical="20dp"
        android:text="@string/help"
        android:textColor="@color/yp_black"
        android:textSize="@dimen/text_size_medium" />
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/arl"
        android:paddingLeft="16dp"
        android:paddingRight="12dp"
        android:paddingVertical="20dp"
        android:text="@string/user_agr"
        android:textColor="@color/yp_black"
        android:textSize="@dimen/text_size_medium" />

</LinearLayout>